{
	"compilerOptions": {
		"declaration": true,
		"module": "commonjs",
		"moduleResolution": "node",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"outDir": "./build/",
		"rootDir": "./source/",
		"strictNullChecks": true,
		"target": "es6",
		"types": [
			"node"
		]
	}
}
